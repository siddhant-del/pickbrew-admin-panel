{
    "preset": "psr12",
    "rules": {
        "binary_operator_spaces": {
            "default": "single_space",
            "operators": {
                "=": "single_space",
                "=>": "single_space"
            }
        },
        "no_extra_blank_lines": true,
        "no_unused_imports": true,
        "not_operator_with_successor_space": true,
        "trailing_comma_in_multiline": true,
        "indentation_type": true,
        "array_syntax": {
            "syntax": "short"
        }
    }
}
